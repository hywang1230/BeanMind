;; Test Ledger for Account Repository Tests
;; This is a minimal Beancount file for testing purposes

option "operating_currency" "CNY"
option "title" "Test Ledger"

;; Open accounts
2025-01-01 open Assets:Bank:Checking CNY
2025-01-01 open Assets:Bank:Savings CNY, USD
2025-01-01 open Assets:Cash CNY
2025-01-01 open Expenses:Food CNY
2025-01-01 open Expenses:Transport CNY
2025-01-01 open Income:Salary CNY
2025-01-01 open Liabilities:CreditCard CNY
2025-01-01 open Equity:OpeningBalances CNY

;; Initial balances
2025-01-02 * "Opening Balance"
  Assets:Bank:Checking     10000.00 CNY
  Equity:OpeningBalances  -10000.00 CNY

2025-01-02 * "Opening Balance - Savings"
  Assets:Bank:Savings      5000.00 CNY
  Equity:OpeningBalances  -5000.00 CNY

2025-01-02 * "Opening Balance - Cash"
  Assets:Cash              500.00 CNY
  Equity:OpeningBalances  -500.00 CNY

;; Some transactions
2025-01-15 * "Salary"
  Income:Salary           -8000.00 CNY
  Assets:Bank:Checking     8000.00 CNY

2025-01-16 * "Lunch"
  Expenses:Food             45.00 CNY
  Assets:Cash              -45.00 CNY

2025-01-17 * "Bus Ticket"
  Expenses:Transport         5.00 CNY
  Assets:Cash               -5.00 CNY

;; Closed account (for testing)
2025-01-01 open Assets:Old:Account CNY
2025-01-10 close Assets:Old:Account
