# BeanMind 环境变量配置

# ==================== 鉴权配置 ====================
# 鉴权模式: none | single_user | multi_user
AUTH_MODE=single_user

# 单用户模式配置
SINGLE_USER_USERNAME=admin
SINGLE_USER_PASSWORD=changeme

# JWT 配置
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==================== 数据配置 ====================
# 数据目录
DATA_DIR=./data

# 账本文件路径
LEDGER_FILE=./data/ledger/main.beancount

# 数据库文件路径
DATABASE_FILE=./data/beanmind.db

# ==================== GitHub 同步配置 ====================
# GitHub 仓库名 (格式: username/repo)
GITHUB_REPO=username/beanmind-backup
# GitHub Personal Access Token
GITHUB_TOKEN=ghp_your_github_token
# 同步分支
GITHUB_BRANCH=main
# 自动同步开关
GITHUB_SYNC_AUTO_ENABLED=false
# 自动同步间隔 (秒)
GITHUB_SYNC_AUTO_INTERVAL=300

# ==================== AI 配置 ====================
# 启用 AI 功能
AI_ENABLED=false
DASHSCOPE_API_KEY=sk-xxxx

# ==================== 周期记账调度配置 ====================
# 启用周期记账调度器
SCHEDULER_ENABLED=true
# 执行时间 (24小时制)
SCHEDULER_HOUR=12
SCHEDULER_MINUTE=0
# 时区
SCHEDULER_TIMEZONE=Asia/Shanghai

# ==================== 服务器配置 ====================
# API 地址
API_HOST=0.0.0.0
API_PORT=8000

# 调试模式
DEBUG=true

# CORS 允许的源
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ==================== 日志配置 ====================
# 日志级别: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO
