# BeanMind 环境变量配置

# ==================== 鉴权配置 ====================
# 鉴权模式: none | single_user | multi_user
AUTH_MODE=single_user

# 单用户模式配置
SINGLE_USER_USERNAME=admin
SINGLE_USER_PASSWORD=changeme

# JWT 配置
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_EXPIRATION_HOURS=24

# ==================== 数据配置 ====================
# 数据目录
DATA_DIR=./data

# 账本文件路径
LEDGER_FILE=./data/ledger/main.beancount

# 数据库文件路径
DATABASE_FILE=./data/beanmind.db

# ==================== 备份配置 ====================
# 备份提供者: github | local | s3
BACKUP_PROVIDER=github

# 自动备份
BACKUP_AUTO_ENABLED=false
BACKUP_AUTO_INTERVAL=daily

# GitHub 备份配置
GITHUB_REPO=username/beanmind-backup
GITHUB_TOKEN=ghp_your_github_token
GITHUB_BRANCH=main

# 本地备份配置
LOCAL_BACKUP_DIR=./backups

# ==================== AI 配置 ====================
# 启用 AI 功能
AI_ENABLED=false

# AgentUniverse 配置
AGENTUNIVERSE_CONFIG=./config/agent_config.yaml

# ==================== 服务器配置 ====================
# API 地址
API_HOST=0.0.0.0
API_PORT=8000

# 调试模式
DEBUG=true

# CORS 允许的源
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
